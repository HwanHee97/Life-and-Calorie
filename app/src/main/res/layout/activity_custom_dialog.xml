<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/setting_dialog_rl"
    android:background="#F8FAE4">

    <TextView
        android:id="@+id/setting_dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#D0DD97"
        android:gravity="center"
        android:paddingEnd="10dp"
        android:layout_marginBottom="30dp"
        android:text="설정"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/setting_dialog_ll_current_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_dialog_tv_title"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/setting_dialog_tv_current_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="현재 몸무게"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/setting_dialog_et_current_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/setting_dialog_ll_current_weight"
        >

        <TextView
            android:id="@+id/setting_dialog_tv_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취소"
            android:background="#AAAAAA"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/setting_dialog_tv_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#D0DD97"
            android:gravity="center"
            android:text="저장"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>