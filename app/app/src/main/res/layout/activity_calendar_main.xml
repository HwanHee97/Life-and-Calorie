<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context="com.example.life_and_calorie.main.calendar.MainActivity">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/CalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mcv_selectionColor="#d2d2d2"
        app:mcv_showOtherDates="all" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@drawable/divline" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:id="@+id/tv_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="날짜"
          android:textAlignment="center" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/tv_date"
          android:background="@drawable/divline" />

      <LinearLayout
          android:id="@+id/layout_calorie_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_date"
          android:gravity="center"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_calorie_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표 칼로리: "
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_calorie_goal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_calorie_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="남은 칼로리: "

            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_calorie_remaining_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center" />
      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/layout_calorie_info"
          android:background="@drawable/divline" />

      <LinearLayout
          android:id="@+id/layout_weight_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/layout_calorie_info"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="몸무게"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text2"
            android:id="@+id/tv_present_weight"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="목표"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_weight_goal"
            android:text="text4"
            android:textAlignment="center" />
      </LinearLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/layout_weight_info"
          android:background="@drawable/divline" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="477dp"

        >

    </androidx.recyclerview.widget.RecyclerView>

  </LinearLayout>
</ScrollView>
