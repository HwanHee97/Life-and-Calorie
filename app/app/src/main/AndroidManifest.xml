<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.team_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Calorie &amp; Life"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Team_Project"
        android:usesCleartextTraffic="true">


        <receiver
            android:name=".WidgetProvider"
            android:exported="true"
            android:label="위젯 테스트 (일반)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_basic" />
        </receiver>

        <activity
            android:name=".userpage.UserActivity"
            android:exported="true" />
        <activity
            android:name=".main.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".main.MainActivity"
            android:exported="true" />
        <activity android:name=".community.ShowWriting" />
        <activity android:name=".community.AddPage" />
    </application>

</manifest>